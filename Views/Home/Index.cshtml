@model IEnumerable<WebApplication3.Models.Employee>
	@{
		Layout = null;
	}
	<!DOCTYPE html>

	<html>
	<head>
		<title>Список сотрудников</title>
	</head>
	<body>
		<h3>Сотрудники</h3>
		<table>
			<tr>
				<td>Имя</td>
				<td>Возраст</td>
				<td>Пол</td>
				<td>Зарплата</td>
				<td></td>
			</tr>

			@foreach (var emp in Model)
			{
				<tr>
					<td>@emp.Name</td>
					<td>@emp.Age</td>
					@if (emp.IsMen)
					{
						<td>Мужчина</td>
					}
					else
					{
						<td>Женщина</td>
					}
					
				</tr>
			}
		</table>
		<a href="~/Home/Add/">Добавить</a>
	</body>
</html>
